<resources>

    <!-- Base application theme. -->
    <style name="Base19AppTheme" parent="@style/BaseAppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Base19AppTheme"></style>

    <!--启动页-->
    <style name="FullscreenActivityTheme" parent="@style/Base19AppTheme">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/normal_content_size</item>
        <item name="android:background">@color/dark</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">正在努力中...</item>
        <item name="DialogSpotCount">4</item>
    </style>

</resources>
