<resources>

    <!-- Base application theme. -->
    <style name="Base19AppTheme" parent="@style/BaseAppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Base19AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimTheme</item>
    </style>

    <!--主界面-->
    <style name="AppBaseThemeMain" parent="@style/Base19AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!--启动页-->
    <style name="SplashScreenActivityTheme" parent="@style/Base19AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/normal_content_size</item>
        <item name="android:background">@color/dark</item>
    </style>

    <style name="WindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_right</item>
    </style>

    <style name="Animation.Activity.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/in_from_right</item>
        <item name="android:windowExitAnimation">@anim/out_from_right</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">正在努力中...</item>
        <item name="DialogSpotCount">4</item>
    </style>

</resources>
