<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!--toolbar颜色-->
        <item name="colorPrimary">@color/system_color</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/system_press</item>
        <!--控件获得焦点后颜色-->
        <item name="colorAccent">@color/system_color</item>
        <item name="colorControlNormal">@color/dark</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--设置draw的图片颜色-->
        <item name="android:textColorSecondary">@color/dark</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:divider">@color/dark</item>
        <!--对话框-->
        <item name="android:alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/BaseAppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimTheme</item>
    </style>

    <!--主界面-->
    <style name="AppBaseThemeMain" parent="@style/BaseAppTheme">
        <!--<item name="android:windowIsTranslucent">false</item>-->
    </style>

    <!--启动页-->
    <style name="SplashScreenActivityTheme" parent="@style/BaseAppTheme">
        <!--<item name="android:windowIsTranslucent">false</item>-->
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/normal_content_size</item>
        <item name="android:background">@color/dark</item>
    </style>

    <style name="WindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_from_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_right</item>
    </style>

    <style name="Animation.Activity.Translucent.Style" parent="@android:style/Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/in_from_right</item>
        <item name="android:windowExitAnimation">@anim/out_from_right</item>
    </style>

    <style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">正在努力中...</item>
        <item name="DialogSpotCount">4</item>
    </style>

</resources>
